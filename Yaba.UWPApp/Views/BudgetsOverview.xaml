<Page
    x:Class="Yaba.UWPApp.BudgetsOverview"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Yaba.UWPApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock Text="My Budgets" FontSize="35" HorizontalAlignment="Center"></TextBlock>
        <ListView x:Name="BudgetOverviewList" 
                  VerticalAlignment="Top" 
                  Margin="5,100,5,40" 
                  HorizontalAlignment="Stretch" 
                  IsItemClickEnabled="True" 
                  ItemClick="List_Click"
                  ItemsSource="{x:Bind _vm.Budgets}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Name}" 
                            FontSize="24" />
                        <TextBlock Text="{Binding Id}" 
                            FontSize="24" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.Items>

            </ListView.Items>
        </ListView>

        <!-- Get budgets and display in ListView -->

        <CommandBar VerticalAlignment="Bottom">
            <AppBarButton Content="Add Budget" Click="Add_Budget_Click"/>
        </CommandBar>
        <Popup x:Name="addBudgetPopup" IsOpen="False" IsLightDismissEnabled="True"  
               Width="320" HorizontalAlignment="Left"
               HorizontalOffset="50"
               VerticalOffset="50"
               Closed="AddBudgetPopup_OnClosed">
            <Popup.ChildTransitions>
                <TransitionCollection>
                    <PaneThemeTransition Edge="Bottom"  />
                </TransitionCollection>
            </Popup.ChildTransitions>
            <Border BorderBrush="Black" BorderThickness="3">
                <Grid Width="380" Height="500"  Background="{ThemeResource FlyoutBackgroundThemeBrush}" Padding="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock FontSize="19" Text="Add New Budget"/>
                    <TextBlock Text="Name" Grid.Column="0" Grid.Row="1"/>
                    <TextBox Grid.Column="1" VerticalAlignment="Top" Grid.Row="1"/>
                    <Button Grid.Row="2" Grid.Column="1" Content="Save Budget" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
                </Grid>
            </Border>
        </Popup>
    </Grid>
</Page>
